@model WebApplication.Models.Project
@{
    Layout = "~/Views/Shared/_BasicHomeLayout.cshtml";
}
<div class="section st-no-padding">
    <section>
        <div id="layerslider-singlework-thumbs" class="ls-fullheight ls-nobullets" style="width: 100%; height: 1080px;">
            @foreach (var image in Model.ProjectImages)
            {
                <div class="ls-slide" data-title="@Model.Name" data-ls="slidedelay: 5000; transition2d:5;">
                    <img src="/Images/Projects/@image.FileName" class="ls-bg" alt="background">
                </div>
            }
            <div class="ls-mental-bottombar">
                <div class="mb-social">
                    <div>
                        @if (!string.IsNullOrEmpty(Model.LogoPath))
                        {
                            <img src="/Images/Logo/@Model.LogoPath" style="width: 151px; height: 53px; margin-top: -10px" class="logo" alt="background">
                            <p style="margin-top: -5px; margin-right: 165px">Client:</p>
                        }
                        else
                        {
                            <p style="margin-top: -5px;">Client: @Model.Client</p>
                        }

                        <p>Client:</p>
                    </div>
                </div>
                <p class="project">Project :</p>
                <p id="lsmb-title"></p>
                <p id="lsmb-title2">Area : @Model.Area</p>
                <p style="margin-top: 25px;">Location : @Model.Location</p>
            </div>
        </div>
</section>
</div>
@section links{
    <script src="~/Content/Home/assets/plugins/layerslider/js/greensock.js" type="text/javascript"></script>
<script src="~/Content/Home/assets/plugins/layerslider/js/layerslider.transitions.js" type="text/javascript"></script>
<script src="~/Content/Home/assets/plugins/layerslider/js/layerslider.kreaturamedia.jquery.js" type="text/javascript"></script>      
}
