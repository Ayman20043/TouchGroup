@using WebApplication.Models
@model IEnumerable<WebApplication.Models.Project>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="page-title">
    <div class="title_left">
        <h4>Project</h4>
    </div>
    <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
            <div class="input-group">
                <span>
                    <button type="button" class="btn btn-success btn-sm add"><i class="fa fa-plus"></i> Add New Project</button>
                </span>
            </div>
        </div>
    </div>
</div>
<div id="Teampartial">
    @{Html.RenderPartial("_ProjectsPartial", Model); }
</div>

<div id="DataModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Project Dtails</h4>
            </div>
            <div class="modal-body">
                <form id="projectform" data-parsley-validate class="form-horizontal form-label-left">
                    <div class="form-group">
                        <input type="hidden" id="Id">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Name">
                            Name
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="text" id="Name" name="Name" class="form-control col-md-7 col-xs-12">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Location">
                            Location
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="text" id="Location" name="Location" class="form-control col-md-7 col-xs-12">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Area">
                            Area
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="text" id="Area" name="Area" class="form-control col-md-7 col-xs-12">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Client">
                            Client
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="text" id="Client" name="Client" class="form-control col-md-7 col-xs-12">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="LogoPath">
                            LogoPath
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="file" id="LogoPath" name="LogoPath" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Category">
                            Category
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @*<input type="text" id="Category" name="Category" class="form-control col-md-7 col-xs-12">*@
                            @Html.DropDownList("Category",  (SelectList)ViewBag.CategoryList,"  -----Select List-----  ")
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="SubCategory">
                            SubCategory
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="text" id="SubCategory" name="SubCategory" class="form-control col-md-7 col-xs-12">
                        </div>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                    <button type="submit" id="btncancel" class="btn btn-danger" data-dismiss="modal">Close</button>
                    <button type="submit" id="btnSubmit" class="btn btn-primary">Submit</button>
                </div>

            </div>
        </div>
    </div>
</div>
<script>
    $(document).on("click", ".add", function (e) {
        $("#btnSubmit").text('Add').css("background-color", "#5cb85c").addClass("White");
        $("#DataModal").modal("show");
    });


    $(document).on("click", ".clickedit", function (e) {
        $("#btnSubmit").text('Save').css("background-color", "#337ab7").addClass("White");
        var action = $(this).attr('data-id');
        $("#DataModal").modal("show");
        $("#Id").val(action);
        $.ajax({
            url: "/Admin/GetProject?id=" + action,
            dataType: "json",
            type: "GET",
            contentType: 'application/json; charset=utf-8',
            async: true,
            processData: false,
            cache: false,
            success: function (data) {
                $("#Name").val(data.Name);
                $("#Position").val(data.Position);
                $("#Details").val(data.Details);
                $("#Picture").val(data.PicturePath);
                $("#Cv").val(data.CvPath);
            },
            error: function (xhr) {
                alert('error');
            }
        });

    });

    $(document).on("click", "#btnSubmit", function (event) {
        if (btnSubmit.textContent == "Add") {
            var form = $('#projectform')[0];
            var dataString = new FormData(form);
            $.ajax({
                url: "/Admin/AddProject",
                type: "POST",
                async: true,
                data: dataString,
                contentType: false,
                processData: false,
                cache: false,
                success: function (data) {
                    $("#DataModal").modal("hide");
                    $.get("/Admin/GetAllProjects", function (data2) {
                        $("#ProjectPartial").html(data2);
                    });

                },
                error: function (xhr) {
                    alert('error');
                }
            });
        }
        else {
            var form = $('#projectform')[0];
            var dataString = new FormData(form);
            $.ajax({
                url: "/Admin/SaveProject",
                type: "POST",
                async: true,
                data: dataString,
                contentType: false,
                processData: false,
                cache: false,
                success: function (data) {
                    $("#DataModal").modal("hide");
                    $.get("/Admin/GetAllProjects", function (data2) {
                        $("#ProjectPartial").html(data2);
                    });

                },
                error: function (xhr) {
                    alert('error');
                }
            });

        }

    });


    $(document).on("click", ".clickdelete", function (e) {
        var action = $(this).attr('data-id');
        $.ajax({
            url: "/Admin/DeleteProject?id=" + action,
            dataType: "json",
            type: "GET",
            contentType: 'application/json; charset=utf-8',
            async: true,
            processData: false,
            cache: false,
            success: function (data) {
                $("#DataModal").modal("hide");
                $.get("/Admin/GetAllProjects", function (data2) {
                    $("#ProjectPartial").html(data2);
                });

            },
            error: function (xhr) {
                alert('error');
            }
        });

    });

</script>