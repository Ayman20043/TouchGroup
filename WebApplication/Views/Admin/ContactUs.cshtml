<script>
    $(document).ready(function() {
        $("#btnsubmit").click(function (e) {
            e.preventDefault();
            $.post("/Admin/ContactUs", $('#signupform').serialize(), function (data, textStatus, jqxhr) {
               
                if (textStatus ==="success")
                    $('.alert-success').show();
                else
                    $('.alert-danger').show();
            }).done(function (result) {
                if (result.success)
                alert(result);
            });
        });
    });
</script>