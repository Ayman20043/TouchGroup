@model IEnumerable<WebApplication.Models.JobApplication>
@using WebApplication.Models
@{
    ViewBag.Title = "Job Application";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

 <div class="page-title">
    <div class="title_left">
       
    </div>
    <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
            <div class="input-group">
                <span>
                    <button type="button" class="btn btn-success btn-sm add" ><i class="fa fa-plus"></i> Add Career</button>
                </span>
            </div>
        </div>
    </div>
</div>
<div id="careerpartial">
    @{Html.RenderPartial("_JobPartial", Model); }
</div>

<div id="pdfmodal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Member Cv</h4>
            </div>
            <div class="modal-body">
                <div>
                    <iframe src="" width="100%" height="400" frameborder="1"></iframe>
                </div>
            </div>
            <div class="modal-footer">
                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                    <button type="submit" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>

            </div>
        </div>
    </div>
</div>

<div id="DeleteModel" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Delete Member</h4>
            </div>
            <form id="Delete " data-parsley-validate class="form-horizontal form-label-left">
                <div class="form-group">
                    <label class="control-label col-md-8 col-sm-3 col-xs-12" for="Position">
                        Are You Sure Want To Delete ?<span class="required"></span>
                    </label>

                </div>
            </form>
            <div class="modal-footer">
                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                    <button type="submit" id="btncancel" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                    <button type="submit" id="Del" class="btn btn-warning btndel " data-dismiss="modal">Delete</button>
                </div>

            </div>
        </div>
    </div>
</div>

<div id="ViewModel" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Member Dtails</h4>
            </div>
            <form id="MemberView" data-parsley-validate class="form-horizontal form-label-left">
                <br />
                <div class="form-group">
                    <input type="hidden" id="hdnIdview">
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <label class=" col-md-3 col-sm-3 col-xs-12" for="Name">
                            Name
                        </label>
                        <p id="xName" class=" col-md-7 col-xs-12"></p>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <label class=" col-md-3 col-sm-3 col-xs-12" for="Position">
                            Position
                        </label>
                        <p id="xPosition" class="col-md-7 col-xs-12"></p>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <label class=" col-md-3 col-sm-3 col-xs-12" for="phone">
                            phone 
                        </label>
                        <p id="xphone" class="col-md-7 col-xs-12"></p>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <label class=" col-md-3 col-sm-3 col-xs-12" for="Email">
                            Email
                        </label>
                        <p id="xEmail" class="col-md-7 col-xs-12"></p>
                    </div>
                </div>
            </form>
            <div class="modal-footer">
                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                    <button type="submit" id="btncancel" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>

            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/Admin/JQScripts/JobApplication.js"></script>