@model IEnumerable<WebApplication.Models.CompanyProfile>

@{
    ViewBag.Title = "CompanyProfile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-title">
    <div class="title_left">
        <h4>Company Profile</h4>
    </div>
    <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
            <div class="input-group">
                <span>
                    <button id="Add" class="btn btn-success btn-sm" ><i class="fa fa-plus"></i> Add New Content</button>                   
                </span>
            </div>
        </div>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SectionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SectionName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditProfile", new { id=item.Id  , @class= "btn btn-info btn-xs edite clickedit" }) |
            @Html.ActionLink("Details", "ProfileDetails", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeleteProfile", new { id=item.Id })
        </td>
    </tr>
}

</table>
<script>
    $(document).ready(function () {
        $("#Add").click(function () {
            document.location = '@Url.Action("AddProfile", "Admin")';
        });
    });

</script>