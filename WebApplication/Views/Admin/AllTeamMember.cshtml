@using WebApplication.Models
@model List<WebApplication.Models.TeamMember>
@{
    ViewBag.Title = "AllTeamMember";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<body>
    <div class="x_panel" style="height:600px;">
        <div class="clearfix"></div>
        <div class="page-title">
            <div class="title_left">
                <h3>Team Members</h3>
            </div>
            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default btnsearch" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        @foreach (TeamMember item in Model)
        {
            <div class="col-md-4 col-sm-4 col-xs-12 animated fadeInDown">
                <div class="well profile_view">
                    <div class="col-sm-12">
                        <h2>@item.Name</h2>
                        <div class="left col-xs-7">
                            <p><strong>Position :</strong>@item.Position </p>
                            <p><strong>Details :</strong>@item.Details </p>
                            @*<ul class="list-unstyled">
                                    <li><i class="fa fa-phone"></i> Address:@item.Details </li>
                                </ul>*@
                            <br />
                        </div>
                        <div class="right col-xs-5 text-center">
                            <img src='~/Images/Profile/Display/@(string.Format("{0}_S.{1}",item.PicturePath,item.Extention))' alt="" class="img-circle img-responsive">
                            <br />
                        </div>
                    </div>
                    <div class="col-xs-12 bottom text-center">
                        <div class="col-xs-12 col-sm-6 emphasis">
                            <button type="button" class="btn btn-primary btn-xs">
                                <i class="fa fa-user">
                                </i> View Profile
                            </button>
                        </div>
                        <div class="col-xs-12 col-sm-6 emphasis">
                            <button type="button" class="btn btn-success btn-xs">
                                <i class="fa fa-edit">
                                </i>Edit
                            </button>
                            <button type="button" class="btn btn-danger btn-xs">
                                <i class="fa fa-trash">
                                </i> Delete
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</body>
<script>
    $('.btnsearch').keyup(function () {
        if ($('.btnsearch').val() != content) {
            content = $('.btnsearch').val();
        }
    });
</script>